{% extends "base.njk" %}
{% block kontent %}
  <article class="post {{ "newlines" if newlines }}">
    <div>
    <h1>{{ title | markdown | safe }}</h1>
    <span class="date">
    {% if draftDate and draft -%}
      {{draftDate.toDateString().replace(' 0', ' ')}}
    {%- else -%}
      {{ page.date.toDateString().replace(' 0', ' ')}}
    {%- endif %}
   </span>


   </div>
    {% if newlines -%}
      {{ content | nl2br | safe  }}
    {%- else %}
      {{ content | safe -}}
    {%- endif %}
  </article>
{% endblock %}
